@baseUrl = http://localhost:3000
@contentType = application/json
@token = your_access_token_here
@flightId = 6650f1f1f1f1f1f1f1f1f1f1
@airlineId = 6650a1a1a1a1a1a1a1a1a1a1
@airportId = 6650b1b1b1b1b1b1b1b1b1b1
@ticketClassId = 6650c1c1c1c1c1c1c1c1c1c1
@bookingId = 6650d1d1d1d1d1d1d1d1d1d1
@userId = 6650e1e1e1e1e1e1e1e1e1e1

### ==========================================
###              FLIGHTS
### ==========================================

### Get All Flights
GET {{baseUrl}}/flights?offset=0&limit=10

###

### Get Flight By ID
GET {{baseUrl}}/flights/detail/{{flightId}}

###

### Create Flight
POST {{baseUrl}}/flights/create
Content-Type: {{contentType}}
Authorization: Bearer {{token}}

{
  "flightNumber": "VN123",
  "airline_id": "{{airlineId}}",
  "departure": "{{airportId}}",
  "arrival": "{{airportId}}",
  "departureTime": "2026-03-01T08:00:00.000Z",
  "arrivalTime": "2026-03-01T10:30:00.000Z",
  "price": 1200000,
  "stock": 180,
  "status": "active"
}

###

### Update Flight
PATCH {{baseUrl}}/flights/update/{{flightId}}
Content-Type: {{contentType}}
Authorization: Bearer {{token}}

{
  "price": 1100000,
  "stock": 150,
  "status": "active"
}

###

### Delete Flight
DELETE {{baseUrl}}/flights/delete/{{flightId}}
Authorization: Bearer {{token}}

