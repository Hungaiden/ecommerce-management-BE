{
  "compilerOptions": {
    "target": "ES6",                   // Biên dịch về ES6
    "module": "commonjs",              // Cho Node.js
    "removeComments": true,            // Xoá comment khi build
    "esModuleInterop": true,           // Import theo kiểu ES6
    "outDir": "api",                   // File JS build ra thư mục "api"
    "rootDir": ".",                    // File TS gốc ở root
    "strict": true,                    // Bật kiểm tra chặt chẽ
    "skipLibCheck": true,              // Bỏ kiểm tra file .d.ts
    "forceConsistentCasingInFileNames": true // Tránh lỗi phân biệt chữ hoa/thường
  },
  "include": [
    "server.ts",
    "src/**/*"
  ]
}
